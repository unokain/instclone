<!DOCTYPE html>
<html>
  <head>
    <title>Picturebook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <header>
        <ul>
          <li>
            <%= link_to 'ホーム', pictures_path %>
          </li>
          <% if logged_in? %>
            <li class = "log"><%= link_to "プロフィール", user_path(current_user.id) %></li>
            <li class = "log"><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
          <% else %>
            <li class = "log"><%= link_to "サインアップ", new_user_path %></li>
            <li class = "log"><%= link_to "ログイン", new_session_path %></li>
          <% end %>
        </ul>
       </header>
    </div>
    <%= yield %>
  </body>
</html>
